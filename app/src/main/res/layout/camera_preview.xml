<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="es.imagingroup.exampleviewmodelhiltdb.presentation.feature.camera.view.CameraPreview" />
        <variable
            name="vm"
            type="es.imagingroup.exampleviewmodelhiltdb.presentation.feature.camera.viewmodel.CameraPreviewViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/cameraPreview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/camera_preview_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="@{()->fragment.capturePhoto()}"
            android:background="@drawable/selector_btn_photo_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/camera_preview_video"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/camera_preview_video"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="@{()->fragment.captureVideo()}"
            android:src="@drawable/ic_videocam"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/camera_preview_photo" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>